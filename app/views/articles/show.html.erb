<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h1>Tweets#show</h1>
      <p>Find me in app/views/tweets/show.html.erb</p>

      <p>ユーザ</p>

      <% if user_signed_in? %>
        <% if @article.favorited_by?(current_user) %>
          <p>お気に入り解除<%= link_to @article.favorites.count, article_favorites_path(@article.id), method: :delete %></p>
        <% else %>
          <p>お気に入り登録<%= link_to @article.favorites.count, article_favorites_path(@article.id), method: :post %></p>
        <% end %>
      <% else %>
        <p>お気に入り数: <%= @article.favorites.count %></p>
      <% end %>
      <%= link_to @user.username, user_path(@user.id) %>

      <%= @article.title %>
      <%= @article.body %>
    </div>
  </div>
</div>