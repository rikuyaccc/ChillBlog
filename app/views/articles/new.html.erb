<div class="container">
	<%= form_with model: @article do |form| %>
		<div class="row">
			<div class="col-6 offset-3">
				<div class="form-group mt-3">
					<%= form.label :title, "タイトル", class: "mb-1" %>
					<%= form.text_field :title, class: 'form-control' %>
				</div>
				<div class="form-group mt-3">
					<%= form.label :body, "本文", class:"mb-1" %>
					<%= form.text_area :body, size: "60x10",class: 'form-control' %>
				</div>
				<div class="form-group mt-3">
					<%= form.submit "投稿する", class: 'btn-btn-primary' %>
				</div>
			</div>
		</div>
	<% end %>
</div>