<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <p>ユーザネーム</p>
      <%= @user.username %>

      <%= link_to "フォロー", follows_user_path(@user.id), {class: "d-block"} %>
      <%= link_to "フォロワー", followers_user_path(@user.id), {class: "d-block"} %>

      <% if @user.id != current_user.id %>
        <% if @user.followed_by?(current_user) %>
          <p><%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %></p> 
        <% else %>
          <p><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
        <% end %>
      <% end %>

      <p>投稿記事</p>
      <% @articles.each do |article| %>
        <%= link_to article.title, article_path(article.id) %>
      <% end %>
      <p>いいねした記事:
        <% @favorite_articles.each do |favorite_article| %>
          <hr>
          <p><%= link_to favorite_article.title, article_path(favorite_article.id) %></p>
        <% end %>
      </p>
    </div>
  </div>
</div>
